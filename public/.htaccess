# /public/.htaccess
<IfModule mod_rewrite.c>
    RewriteEngine On

    # ========= 1. Permitir encabezado Authorization (JWT) =========
    RewriteCond %{HTTP:Authorization} .+
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # ========= 2. Pre-flight OPTIONS =========
    RewriteCond %{REQUEST_METHOD} =OPTIONS
    RewriteRule ^ - [R=200,L]  # ✅ Cambiar a 200

    # ========= 3. Reescritura de rutas Phalcon =========
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^ index.php?_url=/$1 [QSA,L]
</IfModule>

<IfModule mod_headers.c>
    # ========= 4. CORS COMPLETAMENTE ABIERTO =========
    Header always set Access-Control-Allow-Origin "*"
    Header always set Access-Control-Allow-Methods "GET, POST, PUT, PATCH, DELETE, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With, Origin, Accept, Cache-Control"
    Header always set Access-Control-Max-Age "86400"
    
    # ❌ IMPORTANTE: NO usar Access-Control-Allow-Credentials con "*"
    # Header always set Access-Control-Allow-Credentials "true"  # ← COMENTAR ESTA LÍNEA
</IfModule>
